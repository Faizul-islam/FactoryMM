@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <a asp-controller="Customers" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New Employee </a>


        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">CustName</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">OrgName</th>
                    <th scope="col">Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.CustId</th>
                        <td>@customer.CustName</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Email</td>
                        <td>@customer.OrgName</td>
                        <td>@customer.Address</td>
                        <td><a asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.CustId">Edit</a></td>
                        <td>Delete</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>