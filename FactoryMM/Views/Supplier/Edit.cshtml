
@model Supplier

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Supplier" asp-action="Edit" method="post" class="mt-3">

    <input hidden asp-for="SupId" />

    <div class="form-group row">
        <label asp-for="SupName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SupName" class="form-control" placeholder="SupName" />
            <span asp-validation-for="SupName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="OrgName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OrgName" class="form-control" placeholder="OrgName" />
            <span asp-validation-for="OrgName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>



    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>


</form>

