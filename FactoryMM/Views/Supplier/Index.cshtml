

@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="Supplier" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New ProductInventory </a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">SupName</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">OrgName</th>
                <th scope="col">Address</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var sup in Model)
            {
                <tr>
                    <th scope="row">@sup.SupId</th>
                    <td>@sup.SupName</td>
                    <td>@sup.Phone</td>
                    <td>@sup.Email</td>
                    <td>@sup.OrgName</td>
                    <td>@sup.Address</td>

                    <td><a asp-controller="Supplier" asp-action="Edit" asp-route-id="@sup.SupId">Edit</a></td>
                    <td>Delete</td>

                </tr>
            }
        </tbody>
    </table>

</div>