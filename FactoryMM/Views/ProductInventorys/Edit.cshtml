
@model ProductInventory

@{
    ViewData["Title"] = "Edit";
}

    <form asp-controller="ProductInventorys" asp-action="Edit" method="post" class="mt-3">
        
        <input hidden asp-for="ProdInvId" />
        
        <div class="form-group row">
            <label asp-for="ProdInvName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProdInvName" class="form-control" placeholder="ProdInvName" />
                <span asp-validation-for="ProdInvName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UnitPrice" class="form-control" placeholder="UnitPrice" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
        </div>


        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="ProductInventorys" asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>



