
@model MaterialInventory

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="MaterialInventorys" asp-action="Edit" method="post" class="mt-3">

    <input hidden asp-for="MatInvId" />

    <div class="form-group row">
        <label asp-for="MatInvName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MatInvName" class="form-control" placeholder="MatInvName" />
            <span asp-validation-for="MatInvName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" class="form-control" placeholder="Paid" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SupId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SupId" class="form-control" placeholder="SupId" value="@DateTime.Now" />
            <span asp-validation-for="SupId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="MaterialInventorys" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>



