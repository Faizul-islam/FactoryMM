@model IEnumerable<MaterialInventory>

@{
    ViewData["Title"] = "Index";
}

  
    <div>
        <a asp-controller="MaterialInventorys" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New MaterialInventory </a>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">MatInvName</th>
                    <th scope="col">Description</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">UnitPrice</th>
                    <th scope="col">SupId</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var companyper in Model)
                {
                    <tr>
                        <th scope="row">@companyper.MatInvId</th>
                        <td>@companyper.MatInvName</td>
                        <td>@companyper.Description</td>
                        <td>@companyper.Quantity</td>
                        <td>@companyper.UnitPrice</td>
                        <td>@companyper.SupId</td>

                        <td><a asp-controller="MaterialInventorys" asp-action="Edit" asp-route-id="@companyper.MatInvId">Edit</a></td>
                        <td>Delete</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>