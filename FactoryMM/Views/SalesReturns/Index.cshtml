

@model IEnumerable<ReturnSelse>

@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="SalesReturns" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New Return Sales </a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">ProdInvId</th>
                <th scope="col">CustId</th>
                <th scope="col">Quantity</th>
                <th scope="col">ErturnDate</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var spret in Model)
            {
                <tr>
                    <th scope="row">@spret.SaleReturnId</th>
                    <td>@spret.ProdInvId</td>
                    <td>@spret.CustId</td>
                    <td>@spret.Quantity</td>
                    <td>@spret.ErturnDate</td>

                    <td><a asp-controller="SalesReturns" asp-action="Edit" asp-route-id="@spret.SaleReturnId">Edit</a></td>
                    <td>Delete</td>

                </tr>
            }
        </tbody>
    </table>

</div>