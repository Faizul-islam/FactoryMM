
@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee List";
     var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}

<h3>@Model.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.EmpName</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" style="height:100px; width:100px;"/>

                <h4>Employee ID: @Model.Employee.EmpId</h4>
                <h4>Email: @Model.Employee.Phone</h4>
                <h4>Email: @Model.Employee.Address</h4>
                <h4>EmpCategory: @Model.Employee.EmpCatId</h4>
                <h4>JoiningDate: @Model.Employee.JoiningDate</h4>
                <h4>JoiningDate: @Model.Employee.BloodGroup</h4>
                <h4>JoiningDate: @Model.Employee.Increament</h4>
                <h4>Department: @Model.Employee.PhotoPath</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employees" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@Model.Employee.EmpId"  class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>

