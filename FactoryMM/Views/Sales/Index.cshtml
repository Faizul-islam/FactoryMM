

@model IEnumerable<Sales>

@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="Sales" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New Sales </a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">EmpId</th>
                <th scope="col">CustOrderId</th>
                <th scope="col">Total</th>
                <th scope="col">Paid</th>
                <th scope="col">Due</th>
                <th scope="col">DeliveryDate</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var sal in Model)
            {
                <tr>
                    <th scope="row">@sal.SaleId</th>
                    <td>@sal.EmpId</td>
                    <td>@sal.CustOrderId</td>
                    <td>@sal.Total</td>
                    <td>@sal.Paid</td>
                    <td>@sal.Due</td>
                    <td>@sal.DeliveryDate</td>

                    <td><a asp-controller="Sales" asp-action="Edit" asp-route-id="@sal.SaleId">Edit</a></td>
                    <td>Delete</td>

                </tr>
            }
        </tbody>
    </table>

</div>