
@model CompanyPurchase

@{
    ViewData["Title"] = "Edit";
}

    <form asp-controller="CompanyPurchases" asp-action="Edit" method="post" class="mt-3">

        <input hidden asp-for="PurchaseId" />

        <div class="form-group row">
            <label asp-for="MatInvId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MatInvId" class="form-control" placeholder="MatInvId" />
                <span asp-validation-for="MatInvId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Total" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Total" class="form-control" placeholder="Total" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Paid" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Paid" class="form-control" placeholder="Paid" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PurchaseDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PurchaseDate" class="form-control" placeholder="PurchaseDate" value="@DateTime.Now" />
                @*<span asp-validation-for="JoiningDate" class="text-danger"></span>*@
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="CompanyPurchases" asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>



        @*<div class="form-group row">
            <div class="col-sm-10">
                Total Employee Count = @_empRepository.GetAllEmployees().Count();
            </div>
        </div>*@


        @*This script is required to display the selected file in the file upload element*@


    </form>

