
@model CustomerOrder

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="CustOrder" asp-action="Edit" method="post" class="mt-3">

    <input hidden asp-for="CustOrderId" />

    <div class="form-group row">
        <label asp-for="CustId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CustId" class="form-control" placeholder="CustId" />
            <span asp-validation-for="CustId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProdInvId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProdInvId" class="form-control" placeholder="ProdInvId" />
            <span asp-validation-for="ProdInvId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="OrderDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OrderDate" class="form-control" placeholder="OrgName" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DeliveryTakeDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DeliveryTakeDate" class="form-control" placeholder="Address" />
            <span asp-validation-for="DeliveryTakeDate" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="CustoCustOrdermers" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>



