@model IEnumerable<Production>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <a asp-controller="Productions" asp-action="Create" type="button" class="btn btn-primary btn-lg btn-block m-2" style="width:300px;">Create New ProductInventory </a>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">ProdInvId</th>
                    <th scope="col">MatInvId</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var production in Model)
                {
                    <tr>
                        <th scope="row">@production.ProductionId</th>
                        <td>@production.ProdInvId</td>
                        <td>@production.MatInvId</td>

                        <td><a asp-controller="Productions" asp-action="Edit" asp-route-id="@production.ProductionId">Edit</a></td>
                        <td>Delete</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>